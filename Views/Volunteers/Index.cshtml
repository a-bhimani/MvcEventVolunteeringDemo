@model IEnumerable<MvcEventVolunteeringDemo.Models.Volunteer>
@{
  ViewBag.Title = "Volunteers";
}

<div id="data-list" class="row">
    <div class="col-sm-12">
        <div class="panel panel-primary">
        <div class="panel-heading">
            <span class="bold">@ViewBag.Title</span>
            @Html.ActionLink("Add New", "Edit",
                                            new { area = "" },
                                            new { @class = "white right" })
        </div>
        <div class="panel-body">
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th>
                            Full Name
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Username)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Phone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DateOfBirth)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsFemale)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Address)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.City)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.State)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Zip)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsActive)
                        </th>
                        <th>&nbsp;</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.ActionLink(item.FirstName +" "+ item.LastName, "Edit", new { id = item.VolunteerID }, new { @class = "blue bold" })
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateOfBirth)
                        </td>
                        <td>
                            @(item.IsFemale? "Female": "Male")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.State)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Zip)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.VolunteerID }, new { @class = "blue" }) | @Html.ActionLink("Delete", "Delete", new { id = item.VolunteerID }, new { @class = "red" })
                        </td>
                    </tr>}
                </tbody>
            </table>
        </div>
        </div>
    </div>
</div>
